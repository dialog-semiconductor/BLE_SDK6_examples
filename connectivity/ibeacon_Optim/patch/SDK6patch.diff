 #if defined (__DA14531__)
     if (GetWord32(BLE_CNTL2_REG) & EMACCERRSTAT)
     {
@@ -1091,6 +1102,7 @@ __BLEIRQ void rwble_isr(void)
             DBG_SWDIAG(BLE_ISR, ERRORINT, 0);
         }
     }
+
 #endif // __EXCLUDE_ROM_RWBLE__
